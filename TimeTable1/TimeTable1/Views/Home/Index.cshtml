
@model TimeTable1.Models.InputFields

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @*@Html.ValidationSummary(true)*@
    <!DOCTYPE html>
    <html>
    <head>

        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    </head>
    <body>
        <div class="body-content">
            <form id="frmTimetable">
                <div class="form-container">
                    <div class="form-group">
                        <label for="No_of_Working_days">No of Working days</label>
                        <input type="text" class="form-control" id="No_of_Working_days" name="No_of_Working_days" tabindex="1" maxlength="1" oninput="this.value = this.value.replace(/[^1-7]/g, '')" />
                        @Html.ValidationMessageFor(m => m.No_of_Working_days, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <label for="No_of_Subjects_per_day">No of Subjects per day</label>
                        <input type="text" class="form-control" id="No_of_Subjects_per_day" name="No_of_Subjects_per_day" tabindex="1" maxlength="1" oninput="this.value = this.value.replace(/[^1-9]/g, '')" />
                        @Html.ValidationMessageFor(m => m.No_of_Subjects_per_day, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Total_Subjects">Total Subjects</label>
                        <input type="text" class="form-control" id="Total_Subjects" name="Total_Subjects" tabindex="1" maxlength="1" oninput="this.value = this.value.replace(/[^0-4.]/g, '').replace(/(\..*)\./g, '$1');" />
                        @Html.ValidationMessageFor(m => m.Total_Subjects, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="display:none;" >
                        <label for="Total_hours_for_week">Total hours for week</label>
                        <input type="text" class="form-control" id="Total_hours_for_week" name="Total_hours_for_week" tabindex="1" readonly/>
                    </div>
                    <button type="submit" class="btn btn-primary" btn-save" id="Savebtn" onclick="getdata()">Save</button>

                </div>
            </form>
        </div>


    </body>
</html>

}

<script>
    function getdata() {
        var No_of_Working_days = $(" #No_of_Working_days").val()
        var No_of_Subjects_per_day = $("#No_of_Subjects_per_day").val()
        var Total_hours_for_week = $("#Total_hours_for_week").val(No_of_Working_days * No_of_Subjects_per_day);
        if ($(".field-validation-error").length >
            0) {
            $(".text-danger").show();

        }
    }
</script>